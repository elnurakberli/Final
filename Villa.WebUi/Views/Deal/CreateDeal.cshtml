@model CreateDealDto
@{
    ViewData["Title"] = "New Offers Create Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <label>Ad Type</label>
    <input type="text" asp-for="Type" class="form-control" />
    <br />
    <label>Picture Url </label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Title</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <br />
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea id="summernote" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <script>
        $('#summernote').summernote({
            placeholder: 'Hello stand alone ui',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
    <label>Square</label>
    <input type="text" asp-for="Square" class="form-control" />
    <br />
    <label>What Floor</label>
    <input type="text" asp-for="Floor" class="form-control" />
    <br />
    <label>Number Of Rooms</label>
    <input type="text" asp-for="RoomCount" class="form-control" />
    <br />
    <label>Payment Type</label>
    <input type="text" asp-for="PaymentType" class="form-control" />
    <br />
    <label>Parking Area</label>
    <select asp-for="HasParkingArea" class="form-control">
        <option>Choose</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <button class="btn btn-outline-dark">Save</button>
    
    </form>


