@model List<ResultQuestionServiceDto>
@{
    ViewData["Title"] = "Question-Answer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Question</th>
        <th>Answer</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Question</td>
            <td>@item.Answer</td>
            <td>
                <button onclick="deleteQuestion(this)" id="@item.Id" class="btn btn-outline-danger">Delete</button>
                <a asp-controller="Question" asp-action="UptadeQuestion" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>

        </tr>
    }


</table>

<a asp-controller="Question" asp-action="CreateQuestion" clas="btn btn-outline-dark">New Question-Answer add</a>


<script>
    function deleteQuestion(button) {

        var id = button.getAttribute("id");

        Swal.fire({
            title: "Are you sure you want to delete it?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
            cancelButtonTest: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Question/DeleteQuestion/" + id;
            }
        });
    };



</script>

