@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Highlights";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Picture Url</th>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Square</th>
        <th>Contract</th>
        <th>Payment</th>
        <th>Safety</th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Square</td>
            <td>@item.Contract</td>
            <td>@item.Payment</td>
            <td>@item.Safety</td>
            <td>
                <button onclick="deleteFeature(this)" id="@item.Id" class="btn btn-outline-danger">Delete</button>
                <a asp-controller="Feature" asp-action="UptadeFeature" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>

        </tr>
    }


</table>

<a asp-controller="Feature" asp-action="CreateFeature" clas="btn btn-outline-dark">New Highlights information add</a>


<script>
    function deleteFeature(button) {

        var id = button.getAttribute("id");

        Swal.fire({
            title: "Are you sure you want to delete it?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
            cancelButtonTest: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Feature/DeleteFeature/" + id;
            }
        });
    };



</script>