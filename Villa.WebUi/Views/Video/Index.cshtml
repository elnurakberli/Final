@model List<ResultVideoDto>
@{
    ViewData["Title"] = "Video section ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Video Url</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><a href="@item.VideoUrl" target="_blank" >Video Url</a></td>
            <td>
                <button onclick="deleteVideo(this)" id="@item.Id" class="btn btn-outline-danger">Delete</button>
                <a asp-controller="Video" asp-action="UptadeVideo" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>

        </tr>
    }


</table>

<a asp-controller="Video" asp-action="CreateVideo" clas="btn btn-outline-dark">New Video  add</a>


<script>
    function deleteVideo(button) {

        var id = button.getAttribute("id");

        Swal.fire({
            title: "Are you sure you want to delete it?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
            cancelButtonTest: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Video/DeleteVideo/" + id;
            }
        });
    };



</script>
