@model List<ResultSubHeaderDto>
@{
    ViewData["Title"] = "Header";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Address</th>
        <th>Email</th>
        <th>Facebook</th>
        <th>Twitter</th>
        <th>Linkedin</th>
        <th>Instagram</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td><a href="@item.Facebook" target="_blank">Facebook</a></td>
            <td><a href="@item.Twitter" target="_blank">Twitter</a></td>
            <td><a href="@item.Linkedin" target="_blank">Linkedin</a></td>
            <td><a href="@item.Instagram" target="_blank">Instagram</a></td>
            <td>
                <button onclick="deleteSubHeader(this)" id="@item.Id" class="btn btn-outline-danger">Delete</button>
                <a asp-controller="SubHeader" asp-action="UptadeSubHeader" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
            </td>

        </tr>
    }


</table>

<a asp-controller="SubHeader" asp-action="CreateSubHeader" clas="btn btn-outline-dark">New Header  add</a>


<script>
    function deleteSubHeader(button) {

        var id = button.getAttribute("id");

        Swal.fire({
            title: "Are you sure you want to delete it?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
            cancelButtonTest: "Cancel"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/SubHeader/DeleteSubHeader/" + id;
            }
        });
    };



</script>
